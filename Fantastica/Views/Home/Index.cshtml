<div id="layout">
    <a class="menu-link" href="#menu" id="menuLink">
        <span></span>
    </a>
</div>
<div class="menu menu-left">
    <div class="pure-menu pure-menu-open">
        <a class="pure-menu-heading" href="">
            My Playlist
        </a>
        <ng-autocomplete advanced-display="albumList.html"
                         class="listing"
                         max-results="15"
                         min-length="3"
                         on-select="clicked"
                         retrieval-method="getFiles">
        </ng-autocomplete>
        <ul>
            <li ng-repeat="item in playlist"><a>{{item.Title}} by {{item.Artist}}</a></li>
        </ul>
    </div>
</div>
<div id="main">
    <div class="content">
        <div class="dj-list">
            <div class="heading">

                <a>
                    Currently Rockin'
                </a>
            </div>
            <ul>
                <ng-dj ng-repeat="dj in djs"></ng-dj>
            </ul>

        </div>
        <ng-audio></ng-audio>
    </div>
</div>

<script id="dj.html" type="text/ng-template">
    <div>
        <img src="{{dj.avatar}}" />
        <div>{{dj.name}}</div>
    </div>
</script>

<script id="ngAudioTmpl.html" type="text/ng-template">
    <div id="audio-player">
        <div class="control-wrapper">
            <div>
                <h2>{{currently_playing.title }} </h2>
                <h3>{{ currently_playing.artist }}</h3>
            </div>
            <ul id="buttons">
                <li><a id="play-pause" ng-class="playing ? 'pause' : 'play'" class="block" ng-click="togglePlaying()"></a></li>
                <li><a ng-click="nextClicked()" class="next block"></a></li>
            </ul>
            <br />
            <div class="seek-container">
                <div class="seek-bar position-wrapper">
                    <div class="seek-bar position-bar" style="width: {{percent_complete}}%;"></div>
                </div>
                <div class="seek-time">{{ time }}/{{total_time}}</div>
            </div>
        </div>
        <div>
            <audio-player></audio-player>
        </div>
    </div>
</script>

<script id="albumList.html" type="text/ng-template">
    <div><strong>{{item.Title}}</strong></div>
    <div>by {{item.Artist}}</div>

</script>